<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:icon">@color/icons</item>
    </style>

    <style name="Friska" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_mc</item>
        <item name="colorPrimaryDark">@color/primary_dark_mc</item>
        <item name="colorAccent">@color/green_create_account</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/primary_dark_mc</item>
        <item name="android:textColorPrimary">@color/primary_text_mc</item>
        <item name="android:textColorSecondary">@color/secondary_text_mc</item>
        <item name="android:divider">@color/divider_mc</item>
        <item name="android:icon">@color/icons_mc</item>
    </style>


    <style name="FriskaLogIn" parent="Friska">
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="WhiteTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="LargeButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/large_button_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/large_button_top_bottom_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GreenLargeButton" parent="LargeButton">
        <item name="android:background">@color/green_create_account</item>
    </style>

    <style name="RedLargeButton" parent="LargeButton">
        <item name="android:background">@color/red_sign_in</item>
    </style>

    <style name="FriskaRegistrationEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FriskaRegistrationTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FriskaRegistrationTextInputLayout.Padding" parent="FriskaRegistrationTextInputLayout">
        <item name="android:layout_marginTop">@dimen/friska_form_top_padding</item>
    </style>
</resources>
